{
  "name": "Hugo Blog Development",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18-bullseye",
  
  "features": {
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/git-lfs:1": {},
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true,
      "username": "vscode",
      "uid": "1000",
      "gid": "1000"
    }
  },

  "postCreateCommand": "bash /workspaces/blog/.devcontainer/setup.sh",
  "postStartCommand": "echo 'ðŸŽ‰ Hugo blog DevContainer ready! Use ./dev.sh or blog-draft to start developing.'",

  "customizations": {
    "vscode": {
      "extensions": [
        "github.copilot",
        "github.copilot-chat",
        "bungcip.better-toml",
        "davidanson.vscode-markdownlint",
        "yzhang.markdown-all-in-one",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "budparr.language-hugo-vscode",
        "eliostruyf.vscode-front-matter",
        "fivethree.vscode-hugo-snippets"
      ],
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "files.associations": {
          "*.toml": "toml",
          "*.md": "markdown"
        },
        "markdown.preview.breaks": true,
        "markdown.preview.linkify": true
      }
    }
  },

  "forwardPorts": [1313],
  "portsAttributes": {
    "1313": {
      "label": "Hugo Dev Server",
      "onAutoForward": "notify"
    }
  },

  "remoteUser": "vscode"
}
